<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lamy.mathilde.projet100h.Activity.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/add_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#3E45BD"
            android:text="Ajouter un événement"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="15dp"
            android:textColor="#3E45BD"
            android:text="Listes des événements :" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evénements à venir : "
            android:textStyle="bold"
            android:textColor="#3E45BD"
            android:layout_margin="15dp"
            android:textSize="16sp"/>

        <ListView
            android:id="@+id/upcoming_events"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textColor="#3E45BD"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evénements passés : "
            android:textStyle="bold"
            android:textColor="#3E45BD"
            android:layout_margin="15dp"
            android:textSize="16sp"/>

        <ListView
            android:id="@+id/past_events"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:textColor="#3E45BD"
            android:layout_marginRight="15dp" />

    </LinearLayout>


</ScrollView>


